@page
@model GetTransactionsModel
@{
    ViewData["Title"] = "Transactions";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        /* Your custom CSS styles here */
        body {
          font-family: Arial, sans-serif;
            background-color: rgb(79, 241, 184);
            color: rgb(63, 63, 63);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 0px;
            background-image: url(https://cdn.hexnode.com/blogs/wp-content/uploads/2020/05/23145131/Checking-device-and-client-integrity-for-data-security-scaled.jpg);
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
        }

        .container {
            max-width: 1000px;
            margin: 0 auto;
        }

        .list-group-item {
            margin-bottom: 10px;
            background-color: #fff;
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 10px;
        }

        .btn-group {
            margin-top: 5px;
        }

        .pagination {
            margin-top: 20px;
        }
        .fw-bold1{
            color : red;
        }
        .fw-bold2{
            color : red;
        }
        .fw-bold3{
            color : green;
        }
        .fw-bold4{
            color : green;
        }
        .fw-bold5{
            color : blue;
        }
        .btn-danger
        {
            background-color: rgb(231, 20, 20);
        }
        .search
        {
            width: 300px;
            display: flex; 
            margin-bottom:10px; 
            margin-left: 660px;
            position: relative;
            top: 10px;
        }
        .btn-primary
        {
            background-color: rgb(183, 157, 6);
            width: 300px;
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
            margin-top: 100px;
            
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center">@ViewData["Title"]</h1>

        <!-- Add Transaction Button -->
        <a  href="/Transaction/CreateTransaction" class="btn btn-primary">Add Transaction</a>

        <!-- Search Form -->
        <form class="search" method="get">
            <div class="form-group">
                <input type="text" class="form-control" name="Filter.Amount" placeholder="Search by Amount">
            </div>
            <button type="submit" class="btn btn-info">Search</button>
        </form>

        <!-- Transaction List -->
        <ul class="list-group">
            @foreach (var Transaction in Model.Transactions)
            {
                <li class="list-group-item">
                    <div>
                        <span class="fw-bold1">ID:</span> @Transaction.Id <br>
                        <span class="fw-bold2">FromAccountId:</span> @Transaction.FromAccountId <br>
                        <span class="fw-bold3">ToAccountId:</span> @Transaction.ToAccountId <br>
                        <span class="fw-bold4">Amount:</span> @Transaction.Amount <br>
                        <span class="fw-bold5">TransactionDate:</span> @Transaction.TransactionDate<br>
                    </div>
                    <div style="display:flex; justify-content:space-between;" class="btn-group">
                        <a href="/Transaction/GetTransactionById?id=@Transaction.Id" class="btn btn-info">View</a>
                        <a asp-page="/Transaction/UpdateTransaction" asp-route-id="@Transaction.Id" class="btn btn-primary">Update</a>
                        <a href="/Transaction/DeleteTransaction?id=@Transaction.Id" class="btn btn-danger">Delete</a>
                    </div>
                </li>
            }
        </ul>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    @for (var i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(Model.Filter.PageNumber == i ? "active" : "")">
                            <a class="page-link" asp-page="./GetTransactions" asp-route-PageNumber="@i">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        }
    </div>

    <!-- JavaScript dependencies -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        // Your custom JavaScript code here
        $(document).ready(function() {
            // Example: Adding confirmation before deleting a Transaction
            $('.btn-danger').click(function() {
                if (!confirm("Are you sure you want to delete this Transaction?")) {
                    return false; // Prevent the default action if user cancels
                }
            });
        });
    </script>
</body>
</html>
