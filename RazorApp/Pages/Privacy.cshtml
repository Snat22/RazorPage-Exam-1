@page
@model PrivacyModel
@{
    ViewData["Title"] = "Privacy Policy";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            color: #333;
            padding: 20px;
            text-align: center;
        }

        h1 {
            font-size: 2.5em;
            color: #007bff;
            margin-bottom: 20px;
            animation: fadeInDown 1s ease;
        }

        p {
            font-size: 1.2em;
            line-height: 1.6;
            margin-bottom: 20px;
            font-family: Arial, Helvetica, sans-serif;
        }

        .content-box {
            background-color: #fff;
            border-radius: 8px;
            padding: 30px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            animation: zoomIn 1s ease;
        }

        form {
            margin-top: 30px;
        }

        input[type="submit"] {
            background-color: #007bff;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        input[type="submit"]:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
<div class="content-box">
    <h1>@ViewData["Title"]</h1>
    <p>At our website, we take your privacy seriously. This Privacy Policy describes how we collect, use, and disclose information.</p>
    <p>We may collect personal information such as your name, email address, and browsing activity to provide you with a better experience.</p>
    <p>Rest assured that we do not sell or share your personal information with third parties without your consent.</p> <br>

    <p>If you have any questions or concerns about our Privacy Policy, please contact us.</p>
    <form id="contactForm" method="post">
        <input style="width: 400px; border:4px dashed rgb(114, 105, 198); margin-bottom:10px" type="text" name="name" placeholder="">
        <br>
        <input style="width: 400px; border:4px dashed rgb(116, 108, 180)); margin-bottom:10px" type="email" name="email" placeholder="">
        <br>
        <input type="submit" value="Contact Us">
    </form>
</div>

<script>
    // JavaScript function to handle form submission
    document.getElementById("contactForm").addEventListener("submit", function(event) {
        event.preventDefault();
        // Perform AJAX request or other logic to handle form submission
        alert("Thank you for contacting us!");
    });
</script>
</body>
</html>
